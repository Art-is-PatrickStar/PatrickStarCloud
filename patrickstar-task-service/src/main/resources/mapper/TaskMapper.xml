<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wsw.patrickstar.task.mapper.TaskMapper">
    <resultMap id="BaseResultMap" type="com.wsw.patrickstar.task.entity.Task">
        <id column="task_id" property="taskId" jdbcType="BIGINT"/>
        <result column="task_name" property="taskName" jdbcType="VARCHAR"/>
        <result column="task_caption" property="taskCaption" jdbcType="VARCHAR"/>
        <result column="create_date" property="createDate" jdbcType="DATE"/>
        <result column="task_status" property="taskStatus" jdbcType="CHAR"/>
        <result column="recepient_id" property="recepientId" jdbcType="BIGINT"/>
        <result column="recepient_name" property="recepientName" jdbcType="VARCHAR"/>
        <result column="tester_id" property="testerId" jdbcType="BIGINT"/>
        <result column="tester_name" property="testerName" jdbcType="VARCHAR"/>
        <result column="archive" property="archive" jdbcType="CHAR"/>
        <result column="modify_date" property="modifyDate" jdbcType="DATE"/>
    </resultMap>

    <sql id="baseColumn">
        task_id, task_name, task_caption, create_date, task_status, recepient_id, recepient_name,
        tester_id, tester_name, archive, modify_date
    </sql>

    <select id="selectTaskByTime1" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="baseColumn"/>
        FROM task WHERE
        create_date BETWEEN #{startDate} AND #{endDate}
        ORDER BY modify_date ASC
        <!--<if test="startDate != null">
            create_date <![CDATA[>=]]> #{startDate}
        </if>
        <if test="endDate != null">
            AND create_date <![CDATA[<=]]> #{endDate}
        </if>-->
    </select>

    <select id="selectTaskByTime2" parameterType="java.util.Date" resultMap="BaseResultMap">
        SELECT
        <include refid="baseColumn"/>
        FROM task WHERE
        create_date = #{date}
    </select>

    <select id="selectTaskByTime3" parameterType="java.util.List" resultMap="BaseResultMap">
        SELECT
        <include refid="baseColumn"/>
        FROM task WHERE
        create_date IN
        <foreach collection="list" index="index" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
    </select>

    <!--<update id="updateTaskByName">
        update task set task_caption=#{taskCaption}, create_date=#{createDate}, task_status=#{taskStatus}, recepient_id=#{recepientId},
        recepient_name=#{recepientName}, tester_id=#{testerId}, tester_name=#{testerName}, archive=#{archive}, modify_date=#{modifyDate} where task_name=#{taskName}
    </update>-->
</mapper>